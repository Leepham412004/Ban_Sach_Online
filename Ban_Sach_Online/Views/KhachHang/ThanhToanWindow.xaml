<Window x:Class="Ban_Sach_Online.Views.KhachHang.ThanhToanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thanh toán" Height="640" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Danh sách sản phẩm -->
            <RowDefinition Height="*"/>
            <!-- Thông tin nhận hàng -->
            <RowDefinition Height="Auto"/>
            <!-- Nút -->
        </Grid.RowDefinitions>

        <!-- 🟩 Tiêu đề -->
        <TextBlock Text="THÔNG TIN THANH TOÁN" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15" Grid.Row="0"/>

        <!-- 🟦 Danh sách sản phẩm -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Sản phẩm trong đơn:" 
                       FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ListView x:Name="listSanPham" Height="130" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tên sách" DisplayMemberBinding="{Binding Sach.TenSach}" Width="200"/>
                        <GridViewColumn Header="SL" DisplayMemberBinding="{Binding SoLuong}" Width="40"/>
                        <GridViewColumn Header="Giá" DisplayMemberBinding="{Binding Sach.Gia, StringFormat={}{0:N0} đ}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- 🟨 Thông tin người nhận -->
        <StackPanel Grid.Row="2" Margin="0,10,0,10">
            <TextBlock Text="Họ tên người nhận:"/>
            <TextBox x:Name="txtHoTen" Margin="0,5,0,10"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="txtSoDienThoai" Margin="0,5,0,10"/>

            <TextBlock Text="Địa chỉ giao hàng:"/>
            <TextBox x:Name="txtDiaChi" Margin="0,5,0,10" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="Phương thức thanh toán:"/>
            <ComboBox x:Name="cbPhuongThuc" Margin="0,5,0,10">
                <ComboBoxItem Content="Thanh toán khi nhận hàng (COD)" IsSelected="True"/>
                <ComboBoxItem Content="Chuyển khoản ngân hàng"/>
                <ComboBoxItem Content="Ví điện tử Momo/ZaloPay"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Tổng tiền: " FontSize="15" FontWeight="Bold"/>
                <TextBlock x:Name="txtTongTien" 
                           FontSize="15" FontWeight="Bold" Foreground="DarkRed" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- 🟥 Nút hành động -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="BtnXacNhan" Content="Xác nhận thanh toán" 
                    Width="200" Height="35" Margin="0,0,10,0"
                    Click="BtnXacNhan_Click" Background="#FFCC7521" Foreground="White"/>
            <Button x:Name="BtnHuy" Content="Hủy" Width="100" Height="35"
                    Click="BtnHuy_Click" Background="Gray" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
