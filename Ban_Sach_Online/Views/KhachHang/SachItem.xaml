<UserControl x:Class="Ban_Sach_Online.Views.KhachHang.SachItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="280" Width="190">

    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="8" Padding="8" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Ảnh sách -->
            <Border Grid.Row="0" CornerRadius="8" ClipToBounds="True">
                <Grid>
                    <Image Source="{Binding AnhSach}" Stretch="UniformToFill"/>
                    <Border Background="#FF4CAF50"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            CornerRadius="4" Margin="4" Padding="4,2">
                        <TextBlock Text="{Binding PhanTramGiam, StringFormat='-{0}%'}"
                                   Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Tên sách -->
            <TextBlock Grid.Row="1" Text="{Binding TenSach}" 
                       FontWeight="SemiBold" TextWrapping="Wrap" 
                       FontSize="14" Margin="0,8,0,0" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding SoLuongDaBan, StringFormat=Đã bán: {0} cuốn}"
                       FontSize="12"
                       Foreground="Gray"
                       TextAlignment="Center"
                       Margin="0,4,0,0"/>
            <!-- Giá -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                <TextBlock Text="{Binding GiaGoc, StringFormat='{}{0:N0}đ'}"
                           TextDecorations="Strikethrough"
                           Foreground="Gray" FontSize="13" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding GiaSauGiam, StringFormat='{}{0:N0}đ'}"
                           Foreground="#E53935" FontWeight="Bold" FontSize="14"/>
            </StackPanel>

            <!-- Trạng thái tồn kho -->
            <TextBlock Grid.Row="3"
                       Text="{Binding TinhTrang}"
                       Foreground="{Binding MauTinhTrang}"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,4,0,0"/>

            <!-- Nút hành động -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                <Button Content="Thêm vào giỏ" Width="80" Height="28"
                        Background="#1976D2" Foreground="White" FontSize="12" 
                        Click="ThemVaoGio_Click"
                        Margin="0,0,8,0"
                        IsEnabled="{Binding IsConHang}"/>
                <Button Content="Mua ngay" Width="80" Height="28"
                        Background="#E53935" Foreground="White" FontSize="12" 
                        Click="MuaNgay_Click"
                        IsEnabled="{Binding IsConHang}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
