<Window x:Class="Ban_Sach_Online.Views.Admin.QlNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Người Dùng - Bán Sách Online"
        Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ NGƯỜI DÙNG"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Thanh tìm kiếm -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Right">
            <Grid Width="250" Height="32" Margin="0,0,10,0">
                <TextBox x:Name="txtTimKiem"
             FontSize="14"
             Padding="8,0,8,0"
             VerticalContentAlignment="Center"
             TextChanged="txtTimKiem_TextChanged" HorizontalAlignment="Right" Width="250"/>
                <TextBlock x:Name="tbPlaceholder"
               Text="Tìm theo tên hoặc email..."
               Foreground="Gray"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
            </Grid>

            <Button x:Name="btnTimKiem"
                    Content="Tìm kiếm"
                    Width="100" Height="32"
                    Margin="10,0,0,0"
                    Background="#FF2D4C33"
                    Foreground="White"
                    BorderBrush="#2980b9"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="btnTimKiem_Click"/>
        </StackPanel>

        <!-- Bảng danh sách người dùng -->
        <DataGrid x:Name="dgNguoiDung"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  AlternatingRowBackground="#f2f2f2"
                  RowHeight="35"
                  GridLinesVisibility="Horizontal"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã KH" Binding="{Binding KhachHangId}" Width="*"/>
                <DataGridTextColumn Header="Tên Khách Hàng" Binding="{Binding HoTen}" Width="2*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                <DataGridTextColumn Header="Số Điện Thoại" Binding="{Binding SoDienThoai}" Width="*"/>
                <DataGridTextColumn Header="Ngày Đăng Ký" Binding="{Binding NgayDangKy, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút xem lịch sử -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="btnXemLichSu"
                    Content="Xem Lịch Sử Mua Hàng"
                    Width="220" Height="40"
                    Background="#27ae60"
                    Foreground="White"
                    BorderBrush="#1e8449"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="btnXemLichSu_Click"/>
        </StackPanel>
    </Grid>
</Window>
