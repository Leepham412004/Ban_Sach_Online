<Window x:Class="Ban_Sach_Online.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:Ban_Sach_Online.Views.Admin"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#FF202A22">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontFamily" Value="Book Antiqua"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="#FFC1C5BB"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Hiệu ứng hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF6AB04C"/>
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black"
                                                          ShadowDepth="0"
                                                          Opacity="0.5"
                                                          BlurRadius="10"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>

                                    <!-- Hiệu ứng khi bấm -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF4A703C"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Admin" FontSize="24" Foreground="White"
               FontWeight="Bold" Margin="10" />

            <Button Content="Quản lý Sách" Name="BtnQLSach" Click="BtnQLSach_Click_1"/>
            <Button Content="Quản lý Người dùng" Name="BtnQLUser" Click="BtnQLUser_Click"/>
            <Button Content="Quản lý Đơn hàng" Name="BtnQLDonHang" Click="BtnQLDonHang_Click"/>
            <Button Content="Quản lý danh mục" Name="BtnQlDanhMuc" Click="BtnQlDanhMuc_Click"/>
            <Button Content="Đăng xuất" Name="BtnDangXuat" Click="BtnDangXuat_Click" Background="#FF6A805A" Foreground="White"/>
        </StackPanel>

        <!-- Nội dung chính -->
        <Grid Grid.Column="1" Name="ContentArea" Background="#FFF8F8F8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="TỔNG QUAN HỆ THỐNG" 
                       FontSize="26" FontWeight="Bold" Foreground="#2C3E50"
                       Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Margin="10">

                <!-- Ba ô tổng quan -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ô 1: Doanh thu -->
                    <Border Grid.Column="0" CornerRadius="15" Background="#FFB6E388" Margin="10" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Tổng Doanh Thu" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="₫ 125,000,000" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ô 2: Số lượng đơn hàng -->
                    <Border Grid.Column="1" CornerRadius="15" Background="#FF91C8E4" Margin="10" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Số lượng Đơn hàng" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="256" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ô 3: Sách tồn kho -->
                    <Border Grid.Column="2" CornerRadius="15" Background="#FFF2CD5C" Margin="10" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Sách tồn kho" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="1,430" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Biểu đồ kết hợp cột + đường -->
                <Border Background="White" CornerRadius="15" Padding="20" Margin="10,30,10,10">
                    <StackPanel>
                        <TextBlock Text="Doanh thu theo ngày trong tháng" 
                                   FontSize="20" FontWeight="Bold" Foreground="#2C3E50"
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <lvc:CartesianChart Name="chartDoanhThu" Height="300"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
