<Window x:Class="Ban_Sach_Online.Views.Admin.ChiTietSach"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChiTietSach" Height="800" Width="500">
    <Grid Margin="10">
        <StackPanel>

            <!-- Ảnh sách -->
            <Image x:Name="imgSach" Height="200" Width="200" Margin="0,0,0,10" Stretch="Uniform"/>

            <TextBlock Text="Tên sách:" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="txtTenSach"/>

            <TextBlock Text="Tác giả:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <TextBlock x:Name="txtTacGia"/>

            <TextBlock Text="Nhà xuất bản:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <TextBlock x:Name="txtNhaXB"/>

            <TextBlock Text="Năm xuất bản:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <TextBlock x:Name="txtNamXB"/>

            <TextBlock Text="Thể loại:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <TextBlock x:Name="txtTheLoai"/>

            <TextBlock Text="Giá bán:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <TextBlock x:Name="txtGia"/>

            <!-- Grid 2 cột cho các thuộc tính số lượng, kích thước, số trang, trọng lượng -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Cột 1 -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Số lượng:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="txtSoLuong"/>

                    <TextBlock Text="Số trang:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                    <TextBlock x:Name="txtSoTrang"/>
                </StackPanel>

                <!-- Cột 2 -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Kích thước:" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="txtKichThuoc"/>

                    <TextBlock Text="Trọng lượng:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                    <TextBlock x:Name="txtTrongLuong"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Mô tả:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <TextBox x:Name="txtMoTa" 
                     Height="100" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     IsReadOnly="True" Foreground="#FF47906C" BorderBrush="#FF225940"/>

            <!-- Button thao tác -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button x:Name="btnDong" Content="Đóng" Width="100" Margin="5" Click="btnDong_Click" Background="#FF47906C" BorderBrush="#FF47906C" Foreground="White"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
