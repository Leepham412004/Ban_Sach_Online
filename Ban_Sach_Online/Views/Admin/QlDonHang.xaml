<Window x:Class="Ban_Sach_Online.Views.Admin.QlDonHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Đơn Hàng - Bán Sách Online"
        Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ ĐƠN HÀNG" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2c3e50" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20"/>

        <!-- Bảng danh sách đơn hàng -->
        <DataGrid x:Name="dgDonHang"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  RowHeight="35"
                  AlternatingRowBackground="#f2f2f2"
                  GridLinesVisibility="Horizontal"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Đơn Hàng" Binding="{Binding HoaDonId}" Width="*"/>
                <DataGridTextColumn Header="Tên Khách Hàng" Binding="{Binding HoTen}" Width="*"/>
                <DataGridTextColumn Header="Ngày Đặt" Binding="{Binding NgayLap, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TongTien, StringFormat={}{0:N0} đ}" Width="*"/>
                <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khu vực cập nhật trạng thái -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,15,0,0">
            <TextBlock Text="Cập nhật trạng thái:" VerticalAlignment="Center" FontSize="14" />
            <ComboBox x:Name="cbTrangThai" Width="200" FontSize="14">
                <ComboBoxItem Content="Đang chờ xử lý"/>
                <ComboBoxItem Content="Đang giao"/>
                <ComboBoxItem Content="Đã hoàn thành"/>
                <ComboBoxItem Content="Đã hủy"/>
            </ComboBox>

            <Button x:Name="btnCapNhat"
                    Content="Cập Nhật"
                    Width="120" Height="35"
                    Background="#FF2D4C33"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#2980b9"
                    Cursor="Hand"
                    Click="btnCapNhat_Click"/>
        </StackPanel>
    </Grid>
</Window>
